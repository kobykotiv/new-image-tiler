{
  "name": "new-image-tiler",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri dev",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.1",
    "@tauri-apps/plugin-dialog": "^2.0.0-beta.3",
    "@tauri-apps/plugin-fs": "^2.0.0-beta.3",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2.0.0-beta.3",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.5.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^1.3.0"
  },
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "bunx --bun vite",
    "beforeBuildCommand": "bunx --bun vite build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "identifier": "com.image-tiler.dev",
  "productName": "Image Tiler",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "security": {
    "csp": null
  },
  "windows": [
    {
      "fullscreen": false,
      "resizable": true,
      "title": "Image Tiler",
      "width": 800,
      "height": 600
    }
  ]
}
