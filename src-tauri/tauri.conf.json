{
  "$schema": "https://schema.tauri.app/v2/config.json",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Image Tiler",
        "width": 900
      }
    ]
  },
  "permissions": [
    "dialog:*",
    "fs:read",
    "fs:write",
    "path:*",
    "shell:open"
  ]
}
