{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "bunx --bun vite",
    "beforeBuildCommand": "bunx --bun vite build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "tauri": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Image Tiler",
        "width": 800
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "dialog": {
        "all": true
      },
      "fs": {
        "read": true,
        "write": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.image-tiler.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
